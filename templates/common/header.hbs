<header>
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01"
                aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <a class="navbar-brand" href="#/home">Ticket Store</a>
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item">
                    <a class="nav-link" id="linkHome" href="#/home">Home<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="linkTickets" href="#/tickets">Tickets<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#/about">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#/contacts">Contact us</a>
                </li>

                {{#if loggedIn}}
                {{else}}
                    <li class="nav-item">
                        <a class="nav-link" id="linkLogin" href="#/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="linkRegister" href="#/register">Register</a>
                    </li>
                {{/if}}
            </ul>

            <div class="col-sm-3 col-md-3">
                <form class="navbar-form" role="search" action="#/search" >
                    <div class="input-group">
                        <input type="search" class="form-control" placeholder="Search" name="pattern" value="{{pattern}}">
                        <div class="input-group-btn">
                            <button id="search" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i>
                                <img class="equalButton" src="./img/seach.png">
                            </button>
                        </div>
                    </div>
                    {{#if event}}
                        <input type="hidden" name="event" value="{{event}}"></input>
                    {{/if}}
                    {{#if time}}
                        <input type="hidden" name="time" value="{{time}}"></input>
                    {{/if}}
                </form>
            </div>

            {{#if loggedIn}}
                <div class="nav-item navbar-nav dropdown">
                    <img id="avatar-img" class="nav-item avatar-img" data-toggle="dropdown" src="{{avatar}}">
                    <ul id="avatar-dropdown" class="dropdown-menu col-5" style="top: 50px; left: -110px">
                        <li class="nav-item">
                            <a class="nav-link" id="linkMyProfile" href="#/profile">My profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="linkCart" href="#/cart">Cart</a>
                        </li>

                        {{#if isAdmin}}
                            <li class="nav-item">
                                <a class="nav-link" id="linkCreate" href="#/ticket/create">Create ticket</a>
                            </li>
                        {{/if}}

                        <li class="nav-item">
                            <a class="nav-link" id="linkLogout" href="#/logout">Logout</a>
                        </li>
                    </ul>
                </div>
            {{/if}}

        </div>
    </nav>
</header>